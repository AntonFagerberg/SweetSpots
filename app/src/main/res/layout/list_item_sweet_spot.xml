<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="4dp">


    <FrameLayout
        android:id="@+id/sweetSpotListItemFrameLayout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#ccc"
        android:padding="3dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/sweetSpotListItemImageView"
            android:src="@drawable/ic_launcher" />

    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sweetSpotListItemTitleTextView"
        android:textStyle="bold"
        android:textSize="22sp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/sweetSpotListItemFrameLayout"
        android:layout_alignTop="@+id/sweetSpotListItemFrameLayout"
        android:layout_toRightOf="@+id/sweetSpotListItemFrameLayout"
        android:layout_alignParentTop="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sweetSpotListItemDescriptionTextView"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_alignBottom="@+id/sweetSpotListItemFrameLayout"
        android:layout_toRightOf="@+id/sweetSpotListItemFrameLayout"
        android:layout_toEndOf="@+id/sweetSpotListItemFrameLayout" />
</RelativeLayout>